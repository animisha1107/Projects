        "}\n",
        "\n",
        "void loop() {\n",
        "  int A4val=0;   //Set all read values as local variables\n",
        "  int A2val=0;\n",
        "  int A1val=0;\n",
        "  \n",
        "  int B4val=0;\n",
        "  int B2val=0;\n",
        "  int B1val=0;\n",
